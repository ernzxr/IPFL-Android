Algoritmo sumaResta
	// definicion de variables
	Definir num1, num2, suma, resta como Entero;
	
	// ingreso de datos
	Escribir "1. Ingrese un numero: ";
	Leer num1;
	Escribir "2. Ingrese otro numero: ";
	Leer num2;
	
	// proceso de datos
	suma = num1 + num2;
	resta = num1 - num2;
	
	// impresion de resultados
	Escribir num1, " + ", num2, " = ", suma;
	Escribir num1, " - ", num2, " = ", resta;
FinAlgoritmo
