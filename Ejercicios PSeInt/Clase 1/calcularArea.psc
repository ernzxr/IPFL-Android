Algoritmo calcularArea
	// definicion de variables
	Definir base, altura, area Como Entero;
	
	// ingreso de datos
	Escribir "Calculando el area de un rectangulo!";
	
	Escribir "1. Ingrese el valor de la base: ";
	Leer base;
	
	Escribir "2. Ingrese el valor de la altura: ";
	Leer altura;
	
	// proceso de datos
	area = base * altura;
	
	// resultado
	Escribir "El area del rectangulo es ", area, ".";
FinAlgoritmo
